<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:Svg.Editor.Sample.Forms;assembly=Svg.Editor.Sample.Forms"
             xmlns:editor="clr-namespace:Svg.Editor.Forms;assembly=Svg.Editor.Forms"
             x:Class="Svg.Editor.Sample.Forms.MainPage"
             forms:BindableToolbarProperty.BindableToolbarItems="{Binding DrawingCanvas.ToolCommands, Converter={StaticResource ToolCommandsToToolbarItemsConverter}}">
    <ContentPage.BindingContext>
        <forms:MainViewModel />
    </ContentPage.BindingContext>

    <forms:SvgEditorView BackgroundColor="Purple" BindingContext="{Binding DrawingCanvas}" />

</ContentPage>